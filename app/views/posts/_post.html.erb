<div id="page_additional" class="with_contributor">
  
  <% content_tag :a, :href => contributors_path(:anchor => post.contributor.full_name.parameterize), :title => post.contributor.full_name, :class => "person_thumb small", :rel => 'tipsy' do -%>
    <%= image_tag post.contributor.photo.url(:thumb), :alt => post.contributor.full_name %>
    <%= content_tag(:span, "", :class => 'person_mask') %>
  <% end -%>
  
  <h3><%= post.title %></h3>

  <div class="contributor_details">
    <h4>
      <span class="topichost"><%= "Topic Host:" if post.topic_host == true %></span>
      <%= post.contributor.full_name %>
      <%= raw "<span class='skill_tag #{post.skill_level.downcase}'><span>#{post.skill_level}</span></span>" unless post.skill_level.empty? %>
    </h4>  
    <ul class="contributor_social_links">
      <li><%= link_to post.contributor.firstname, "http://twitter.com/#{post.contributor.twitter_username}", :rel => "tipsy", :class => "twitter_social", :title => "Follow #{post.contributor.firstname} on Twitter" %></li>
      <li><%= link_to post.contributor.firstname, "http://github.com/#{post.contributor.github_username}", :rel => "tipsy", :class => "github_social", :title => "Follow #{post.contributor.firstname} on Github" %></li>
      <!-- <li><a class="ask_contributor_question" title="Ask <%= post.contributor.firstname %> a Question" rel="tipsy" href="#">Ask a Question</a></li> -->
    </ul>  
  </div>
  
</div>

<% unless post.elements.count == 0 %>
<ul class="element_list">
  <li class="title"><span>In this post</span></li>
  <% for element in post.elements %>
    <li><%= link_to element.title, element.link %></li>
  <% end %>
</ul>
<% end %>

<div class="post_content">
  <%= raw textilize(post.body) unless post.body.nil? %>
</div>
