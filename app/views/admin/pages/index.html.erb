<% content_for :page_nav do %>
  <%= render "admin/shared/admin_nav"%>
<% end %>

<div id="page_additional">
  <h3>Pages</h3>  
  <h4>add, edit, remove pages</h4>  
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<ul class="admin_nav">
  <li>
    <%= link_to admin_root_path, :class => "simple_button" do %>
      <span>&larr; Back to admin home</span>
    <% end %>
  </li>
  <li>
    <%= link_to new_admin_page_path, :class => "simple_button" do %>
      <span>Create new page</span>
    <% end %>
  </li>
</ul>

<table border="0" cellspacing="0" cellpadding="0">
<tr>
  <th>Page title</th>
  <th>Slug</th>
  <!-- <th>Body</th> -->
  <th>Publish Date</th>
  <th></th>
  <th></th>
</tr>
<% @pages.each_with_index do |page, i| %>
<tr class="actionable" id="<%= controller.controller_name %>_<%= page.id %>">
  <td><%= page.page_title %></td>
  <td><%= page.slug %></td>
  <td><%= page.publish_date.strftime("%c") %></td>

  <td class="actions">
    <%= link_to admin_page_path(page), :method => :delete, :remote => true, :class => "simple_button" do %>
      <span>Destroy</span>
    <% end %>

    <%= link_to edit_admin_page_url(page), :class => "simple_button" do %>
      <span>Edit</span>
    <% end %>    
  </td>

</tr>
<% end %>
</table>

