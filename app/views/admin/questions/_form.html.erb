<%= form_for [:admin, @post] do |f| %>
  <ol>    
    <li class="field">
      <label>I am</label>
      <%= f.select(:contributor_id, grouped_options_for_select(Contributor.visibility_groups, @post.contributor_id), { :include_blank => true }) %>
    </li>
    
    <li class="field">
      <label>Body</label>
      <%= f.text_field :body %>
    </li>

    <p><%= f.submit "Submit" %></p>  
  </ol>
<% end %>
