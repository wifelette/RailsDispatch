<% content_for :page_nav do %>
  <%= render "admin/shared/admin_nav"%>
<% end %>

<div id="page_additional">
  <h3>Contributors</h3>  
  <h4>add, edit, remove contributors</h4>  
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<ul class="admin_nav">
  <li>
    <%= link_to admin_root_path, :class => "simple_button" do %>
      <span>&larr; Back to admin home</span>
    <% end %>
  </li>
  <li>
    <%= link_to new_admin_contributor_path, :class => "simple_button" do %>
      <span>Add another contributor</span>
    <% end %>
  </li>
</ul>

<table border="0" cellspacing="0" cellpadding="0">
<tr>
  <th>Full Name</th>
  <th></th>
</tr>
<% @contributors.each_with_index do |contributor, i| %>
<tr class="actionable" id="<%= controller.controller_name %>_<%= contributor.id %>">
  <td><%= contributor.full_name %></td>
  
  <td class="actions">
    <%= link_to admin_contributor_path(contributor), :method => :delete, :remote => true, :class => "simple_button" do %>
      <span>Destroy</span>
    <% end %>

    <%= link_to edit_admin_contributor_url(contributor), :class => "simple_button" do %>
      <span>Edit</span>
    <% end %>    
  </td>

</tr>
<% end %>
</table>
