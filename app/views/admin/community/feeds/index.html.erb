<% content_for :page_nav do %>
  <%= render "admin/shared/admin_nav"%>
<% end %>

<div id="page_additional">
  <h3>Feeds</h3>  
  <h4>add, edit, remove feeds</h4>  
</div>

<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<ul class="admin_nav">
  <li>
    <%= link_to admin_community_root_path, :class => "simple_button" do %>
      <span>&larr; Back to community home</span>
    <% end %>
  </li>
  <li>
    <%= link_to new_admin_community_feed_path, :class => "simple_button" do %>
      <span>Add another feed</span>
    <% end %>
  </li>
</ul>


<table border="0" cellspacing="0" cellpadding="0">
<tr>
  <th>Site url</th>
  <th>Feed url</th>
  <th style="width:175px;">Contributor</th>
  <th></th>
</tr>
<% @feeds.each_with_index do |feed, i| %>
<tr class="actionable" id="<%= controller.controller_name %>_<%= feed.id %>">
  <td><%= truncate(feed.site_url, 20) %></td>
  <td><%= truncate(feed.feed_url, 20) %></td>
  <td><%= feed.contributor.full_name if feed.contributor %></td>

  <td class="actions">
    <%= link_to admin_community_feed_path(feed), :method => :delete, :remote => true, :class => "simple_button" do %>
      <span>Destroy</span>
    <% end %>

    <%= link_to edit_admin_community_feed_url(feed), :class => "simple_button" do %>
      <span>Edit</span>
    <% end %>    
  </td>

</tr>
<% end %>
</table>



