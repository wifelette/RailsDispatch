<div id="contributor_details">
  <% content_tag :a, :href => url_for(@contributor), :title => @contributor.full_name, :class => "person_thumb large", :rel => 'tipsy' do -%>
    <%= image_tag @contributor.photo.url(:large), :alt => @contributor.full_name %>
    <%= content_tag(:span, "", :class => 'person_mask') %>
  <% end -%>

  <ul class="contributor_bio_info">
    <li class="contributor_name"><%= @contributor.full_name %></li>
    <li class="contributor_social"><%= link_to @contributor.firstname, "http://twitter.com/#{@contributor.twitter_username}", :rel => "tipsy", :class => "twitter_social", :title => "Follow #{@contributor.firstname} on Twitter" %></li>
    <li class="contributor_social"><%= link_to @contributor.firstname, "http://github.com/#{@contributor.github_username}", :rel => "tipsy", :class => "github_social", :title => "Follow #{@contributor.firstname} on Github" %></li>
    <!-- <li class="contributor_social"><%= link_to @contributor.firstname, new_community_question_path(:question => {:contributor_id => @contributor.id}), :rel => "tipsy", :class => "ask_contributor_question", :title => "Ask #{@contributor.firstname} a question" %></li> -->
  </ul>

  <p><%= raw markdown(@contributor.bio) %></p>

</div>
